# Contributor: kfgz <kfgz@interia.pl>
# Contributor: Bart≈Çomiej Piotrowski <nospam@bpiotrowski.pl>

pkgbase=x265-hg
pkgname=('x265-hg' 'libx265-hg' 'libx265-10bit-hg')
pkgver=r10369.f32e6464225a
pkgrel=1
arch=('i686' 'x86_64')
url='https://bitbucket.org/multicoreware/x265'
license=('GPL')
makedepends=('cmake' 'mercurial' 'yasm')
source=('hg+https://bitbucket.org/multicoreware/x265')
md5sums=('SKIP')

pkgver() {
  cd x265

  printf "r%s.%s" "$(hg identify -n)" "$(hg identify -i)"
}

prepare() {
  cp -r x265 x265-10bit
  cp -r x265 libx265
  cp -r x265 libx265-10bit
}

build() {
  cd x265

  if [[ -d build ]]; then
    rm -rf build
  fi
  mkdir build && cd build

  cmake ../source \
    -DCMAKE_INSTALL_PREFIX='/usr' \
    -DENABLE_SHARED='FALSE'
  make

  cd ../../libx265

  if [[ -d build ]]; then
    rm -rf build
  fi
  mkdir build && cd build

  cmake ../source \
    -DCMAKE_INSTALL_PREFIX='/usr'
  make

  cd ../../x265-10bit

  if [[ -d build ]]; then
    rm -rf build
  fi
  mkdir build && cd build

  cmake ../source \
    -DCMAKE_INSTALL_PREFIX='/usr' \
    -DHIGH_BIT_DEPTH='TRUE' \
    -DENABLE_SHARED='FALSE'
  make

  cd ../../libx265-10bit

  if [[ -d build ]]; then
    rm -rf build
  fi
  mkdir build && cd build

  cmake ../source \
    -DCMAKE_INSTALL_PREFIX='/usr' \
    -DHIGH_BIT_DEPTH='TRUE'
  make
}

package_x265-hg() {
pkgdesc='CLI tools for encoding H265/HEVC video streams.'
depends=('gcc-libs')
provides=('x265')
conflicts=('x265')

  cd x265/build

  make DESTDIR="${pkgdir}" install

  cd ../../x265-10bit/build

  install -m 755 x265 "${pkgdir}"/usr/bin/x265-10bit
}

package_libx265-hg() {
pkgdesc='Library for encoding H265/HEVC video streams.'
depends=('gcc-libs')
provides=('libx265')
conflicts=('libx265')

  cd libx265/build

  make DESTDIR="${pkgdir}" install
  rm -rf "${pkgdir}"/usr/{bin,include,lib/pkgconfig}
}

package_libx265-10bit-hg() {
pkgdesc='Library for encoding H265/HEVC video streams.'
depends=('gcc-libs')
provides=('libx265')
conflicts=('libx265')

  cd libx265-10bit/build

  make DESTDIR="${pkgdir}" install
  rm -rf "${pkgdir}"/usr/{bin,include,lib/pkgconfig}
}

